{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "airbnb/typescript",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended" // generated by vite
    ],
    "ignorePatterns": [
        "dist",
        ".eslintrc.cjs",
        ".eslintrc.json",
        "_history.cjs" // original .eslintrc.cjs generated from vite
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-refresh" // generated from vite
    ],
    "rules": {
        "react-refresh/only-export-components": [ // generated by vite
            "warn",
            {
                "allowConstantExport": true
            }
        ],
        "react/react-in-jsx-scope": 0
    }
}